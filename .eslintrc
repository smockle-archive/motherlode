{
  "env": {
    "browser": false,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "forOf": true,
    "generators": true,
    "modules": true,
    "superInFunctions": true,
    "templateStrings": true,
    "jsx": false
  },
  "parser": "babel-eslint",
  "rules": {
    "block-scoped-var": 1,
    "brace-style": [1, "1tbs"],
    "camelcase": [1, {"properties": "always"}],
    "comma-dangle": 1,
    "comma-spacing": [1, {"before": false, "after": true}],
    "comma-style": [1, "last"],
    "curly": [2, "multi"],
    "eol-last": 1,
    "generator-star-spacing": [1, "after"],
    "guard-for-in": 1,
    "indent": [1, 2],
    "no-eq-null": 2,
    "no-extra-parens": 1,
    "no-lonely-if": 1,
    "no-mixed-spaces-and-tabs": [1, "smart-tabs"],
    "no-spaced-func": 1,
    "no-throw-literal": 2,
    "no-trailing-spaces": 0,
    "no-underscore-dangle": 0,
    "no-undefined": 2,
    "no-unused-vars": 1,
    "no-var": 2,
    "quotes": [0, "double", "avoid-escape"],
    "radix": 1,
    "semi-spacing": [1, {"before": false, "after": true}],
    "strict": [1],
    "vars-on-top": 1,
    "wrap-iife": 1
  }
}
